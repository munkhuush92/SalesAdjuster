<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorNumberPickerConBackground</item>
        <item name="colorPrimary">@color/colorRightSideButtonBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!--font style-->
    <style name="fontRightTabBtn" parent="@android:style/TextAppearance.Small">
        <!--<item name="android:fontFamily">@font/museosans.ttf</item>-->
        <item name="android:textColor">@color/colorNumberPickerConBackground</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!-- top text view font style-->
    <style name="fontTopText" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <!--<item name="android:fontFamily">@font/museosans.ttf</item>-->
        <item name="android:textColor">@color/colorRightSideButtonBackground</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!--cancel button style-->
    <style name="cancelBtnStyle" parent="@android:style/MediaButton">
        <!-- Customize your theme here. -->
        <item name="android:background">@android:color/holo_red_light</item>
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="fontMainTextNormal" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <!--<item name="android:fontFamily">@font/museosans.ttf</item>-->
        <item name="android:textColor">@color/colorRightSideButtonBackground</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="fontMainTextBold" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <!--<item name="android:fontFamily">@font/museosans.ttf</item>-->
        <item name="android:textColor">@color/colorRightSideButtonBackground</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fontDialogText" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <!--<item name="android:fontFamily">@font/museosans.ttf</item>-->
        <item name="android:textColor">@color/colorNumberPickerConBackground</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
